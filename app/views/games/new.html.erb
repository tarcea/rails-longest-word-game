<style>
  .list {
  list-style: none;
  padding-left: 0px;
}

.list li {
  display: inline-block;
  padding: 0px 20px;
  width: 40px;
  background-color: lightblue;
  margin: 5px;

</style>

  <ul class="list">
  <% @letters.each do |letter| %>
  <li><h1><%= letter %></h1></li>
  <% end %>
  </ul>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Word">
    <input type="submit">
  </form>
